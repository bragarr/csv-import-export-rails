<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email address:</strong>
    <%= user.email_address %>
  </p>

  <p>
    <strong>Favorite food:</strong>
    <%= user.favorite_food %>
  </p>

  <p>
    <strong>Mobile phone number:</strong>
    <%= user.mobile_phone_number %>
  </p>

</div>
